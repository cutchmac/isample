{
  "compilerOptions": {
    "compileOnSave": false,
    "noEmit": false,
    "inlineSources": false,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "declaration": false,
    "rootDir": "./",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015.promise",
      "es5",
      "dom",
      "scripthost",
      "es2015",
      "es6",
      "es2015.iterable",
      "es2015.core",
      "es2017.object",
      "es2016"
    ]
  },
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  },
  "filesGlob": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "rootDirs": [
    "app/"
  ]
}
